#!/usr/bin/env ruby

require 'optparse'
require 'simple_scrambler'

options = {}

opt_parser = OptionParser.new do |opt|
  
  opt.banner = "Usage: simple_enc [OPTIONS] text"
  opt.separator ""
  opt.separator "Options"
  opt.on("-c", "--cipher NAME", "the cipher name used to scramble the text. ZENIT, ROT13 or ROT47") do |cipher|
    options[:cipher] = cipher
  end
  
  opt.on("-h", "--help", "help")
      
end

opt_parser.parse!

cipher = options[:cipher] || 'ZENIT'

SimpleScrambler::Configuration.configure do |config|
  case cipher
  when "ZENIT"
    config.scrambler_algorithm = SimpleScrambler::Ciphers::ZenitPolar
  when "ROT13"
    config.scrambler_algorithm = SimpleScrambler::Ciphers::ROT13
  when "ROT47"
    config.scrambler_algorithm = SimpleScrambler::Ciphers::ROT47
  end
  
end

if ARGV[0] == nil
  puts opt_parser
else
  puts SimpleScrambler::Scrambler.scramble(ARGV[0])
end  